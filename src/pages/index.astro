.pic {
    position: fixed;
    top: 10%;
    left: 0;
    width: 100%;
    height: 100%;
    /* white-space: nowrap; Prevent line breaks */
    overflow-x: auto; /* Allow horizontal scrolling */
    display: flex;
    z-index: 2;
    pointer-events: none;
    transition: opacity 0.5s ease;
    scrollbar-width: none; /* Hide scroll bar in Firefox */
